@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bill Reminder System</title>

    <!-- Bootswatch Cosmo Theme -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/cosmo/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="app-body">

    <!-- TOP NAV BAR -->
    <header class="topbar shadow-sm">
        <div class="topbar-inner">

            <!-- LEFT: APP NAME -->
            <div class="d-flex align-items-center gap-2">
                <span class="navbar-brand mb-0 h4 text-white">Bill Reminder System</span>
            </div>

            <!-- RIGHT: BUTTONS -->
            <div class="d-flex align-items-center gap-3">

                <!-- DARK MODE TOGGLE -->
                <button id="themeToggleBtn" class="btn btn-sm btn-outline-light rounded-pill">
                    🌙 Dark
                </button>

                <!-- AUTH BUTTONS -->
                @if (SignInManager.IsSignedIn(User))
                {
                    <span class="text-light small d-none d-sm-inline">
                        @UserManager.GetUserName(User)
                    </span>

                    <form asp-area="Identity" asp-page="/Account/Logout"
                          asp-route-returnUrl="/" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-light rounded-pill">
                            Logout
                        </button>
                    </form>
                }
                else
                {
                    <a class="btn btn-sm btn-light rounded-pill"
                       asp-controller="Account" asp-action="Login">Login</a>

                    <!-- IMPORTANT: uses static HTML register page -->
                    <a class="btn btn-sm btn-outline-light rounded-pill"
                       href="/register.html">Register</a>
                }
            </div>

        </div>
    </header>

    <!-- MAIN APPLICATION SHELL -->
    <div class="app-shell">

        <!-- SIDEBAR (only when logged in) -->
        @if (SignInManager.IsSignedIn(User))
        {
            <nav class="sidebar">
                <ul class="nav flex-column">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <span class="icon">🏠</span> Dashboard
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Bills" asp-action="Index">
                            <span class="icon">📋</span> My Bills
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Bills" asp-action="Create">
                            <span class="icon">➕</span> Add Bill
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Reports" asp-action="Index">
                            <span class="icon">📊</span> Reports
                        </a>
                    </li>

                </ul>
            </nav>
        }

        <!-- MAIN CONTENT AREA -->
        <main class="main-content">
            <div class="container-fluid mt-3 mb-4">

                @await Html.PartialAsync("_Notifications")

                @RenderBody()

            </div>
        </main>

    </div>

    <!-- FOOTER -->
    <footer class="app-footer text-muted">
        <div class="container-fluid text-center small">
            &copy; @DateTime.Now.Year - Bill Reminder System
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>