@model BillReminderSystem.Models.Bill

@{
    ViewData["Title"] = "Add New Bill";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm mt-3">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Add New Bill</h4>
            </div>
            <div class="card-body">

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <form asp-action="Create">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" placeholder="e.g. Rent – March" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Amount &amp; Currency</label>
                        <div class="row g-2">
                            <div class="col-7">
                                <div class="input-group">
                                    <input asp-for="Amount" class="form-control" />
                                </div>
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                            <div class="col-5">
                                <select asp-for="Currency" class="form-select">
                                    <option value="USD">USD – US Dollar</option>
                                    <option value="EUR">EUR – Euro</option>
                                    <option value="RWF">RWF – Rwandan Franc</option>
                                </select>
                                <span asp-validation-for="Currency" class="text-danger"></span>
                            </div>
                        </div>
                        <small id="conversionHint" class="text-muted d-block mt-1"></small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category" class="form-label"></label>
                        <select asp-for="Category" class="form-select">
                            <option value="">-- Select category --</option>
                            <option>Rent</option>
                            <option>Utilities</option>
                            <option>Internet</option>
                            <option>Groceries</option>
                            <option>Transport</option>
                            <option>Subscriptions</option>
                            <option>Other</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DueDate" class="form-label"></label>
                        <input asp-for="DueDate" class="form-control" />
                        <span asp-validation-for="DueDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select"
                                asp-items="Html.GetEnumSelectList<BillReminderSystem.Models.BillStatus>()">
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to list</a>
                        <button type="submit" class="btn btn-primary">Save Bill</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        (function () {
            const amountInput = document.getElementById("Amount");
            const currencySelect = document.getElementById("Currency");
            const hint = document.getElementById("conversionHint");

            if (!amountInput || !currencySelect || !hint) return;

            const ratesToUSD = {
                "USD": 1,
                "EUR": 1.1,    // 1 EUR ≈ 1.1 USD (example)
                "RWF": 0.0008  // 1 RWF ≈ 0.0008 USD (example)
            };

            function updateHint() {
                const amount = parseFloat(amountInput.value);
                const curr = currencySelect.value;

                if (isNaN(amount) || amount <= 0) {
                    hint.textContent = "";
                    return;
                }

                const rate = ratesToUSD[curr] || 1;
                const inUsd = amount * rate;

                hint.textContent = "Approx. " + inUsd.toFixed(2) + " USD at current sample rates.";
            }

            amountInput.addEventListener("input", updateHint);
            currencySelect.addEventListener("change", updateHint);
        })();
    </script>
}