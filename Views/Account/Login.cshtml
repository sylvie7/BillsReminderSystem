@model BillReminderSystem.Controllers.AccountController.LoginViewModel

@{
    ViewData["Title"] = "Sign in";
    var returnUrl = ViewData["ReturnUrl"] as string ?? "/";
}

<div class="row mt-4">
    <div class="col-lg-8 offset-lg-2">
        <div class="card shadow-sm">
            <div class="row g-0">

                <!-- LEFT: FORM -->
                <div class="col-md-6 p-4 d-flex flex-column justify-content-center">
                    <h2 class="mb-3">Welcome back</h2>
                    <p class="text-muted mb-4">
                        Sign in to manage your bills, see reminders and view spending reports.
                    </p>

                    <form method="post" asp-action="Login" asp-route-returnUrl="@returnUrl">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label"></label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-2">
                            Sign in
                        </button>

                        <div class="d-flex justify-content-between small">
                            <a asp-controller="Account" asp-action="ForgotPassword">Forgot password?</a>
                            <a asp-controller="Account" asp-action="Register">Create account</a>
                        </div>
                    </form>
                </div>

                <!-- RIGHT: INFO -->
                <div class="col-md-6 d-none d-md-block">
                    <div class="h-100 w-100 p-4 d-flex flex-column justify-content-center text-white"
                         style="background: linear-gradient(135deg, #111827, #1f2937); border-radius: 0 0.5rem 0.5rem 0;">
                        <h4 class="mb-3">Bill Reminder System</h4>
                        <p class="mb-2">✓ Dashboard with upcoming & overdue bills</p>
                        <p class="mb-2">✓ Email confirmation when you add a bill</p>
                        <p class="mb-2">✓ Reports by category and date range</p>
                        <p class="mt-3 small text-white-50 mb-0">
                            Switch to dark mode any time from the sidebar.
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}