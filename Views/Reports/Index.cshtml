@model BillReminderSystem.Models.ReportViewModel

@{
    ViewData["Title"] = "Reports";
}

<div class="row mt-2">
    <div class="col-lg-12">
        <div class="card shadow-sm">

            <!-- HEADER -->
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Spending Report</h5>

                <div class="d-flex align-items-center gap-2">

                    <!-- FILTER FORM -->
                    <form method="get" asp-action="Index" class="d-flex align-items-center gap-2">
                        <div>
                            <label class="form-label small mb-0">From</label>
                            <input asp-for="FromDate" type="date" class="form-control form-control-sm" />
                        </div>

                        <div>
                            <label class="form-label small mb-0">To</label>
                            <input asp-for="ToDate" type="date" class="form-control form-control-sm" />
                        </div>

                        <button type="submit" class="btn btn-sm btn-outline-primary rounded-pill mt-3 mt-md-0">
                            Update
                        </button>
                    </form>

                    <!-- PDF DOWNLOAD BUTTON -->
                    <a class="btn btn-sm btn-danger rounded-pill mt-3 mt-md-0"
                       asp-controller="Reports"
                       asp-action="ExportPdf"
                       asp-route-fromDate="@Model.FromDate"
                       asp-route-toDate="@Model.ToDate">
                        ⬇ Download PDF
                    </a>
                </div>
            </div>

            <!-- BODY -->
            <div class="card-body">

                <!-- TOTAL CARDS -->
                <div class="row g-3 mb-3">
                    <div class="col-md-4">
                        <div class="card border-primary shadow-sm">
                            <div class="card-body">
                                <div class="text-muted text-uppercase small mb-1">Total Amount</div>
                                <h4 class="mb-0">@Model.TotalAmount.ToString("0.00")</h4>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card border-success shadow-sm">
                            <div class="card-body">
                                <div class="text-muted text-uppercase small mb-1">Total Paid</div>
                                <h4 class="mb-0 text-success">@Model.TotalPaid.ToString("0.00")</h4>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card border-warning shadow-sm">
                            <div class="card-body">
                                <div class="text-muted text-uppercase small mb-1">Total Pending</div>
                                <h4 class="mb-0 text-warning">@Model.TotalPending.ToString("0.00")</h4>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- CATEGORY TABLE -->
                <h6 class="mt-3 mb-2">By Category</h6>

                @if (Model.Categories == null || !Model.Categories.Any())
                {
                    <p class="text-muted mb-0">No bills found in this date range.</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-hover align-middle mb-0">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th class="text-end">Total</th>
                                    <th class="text-end">Paid</th>
                                    <th class="text-end">Pending</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var c in Model.Categories)
                                {
                                    <tr>
                                        <td>@c.Category</td>
                                        <td class="text-end">@c.Total.ToString("0.00")</td>
                                        <td class="text-end text-success">@c.Paid.ToString("0.00")</td>
                                        <td class="text-end text-warning">@c.Pending.ToString("0.00")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>